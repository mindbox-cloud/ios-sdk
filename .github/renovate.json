{
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard",
    "group:all"
  ],
  "separateMinorPatch": true,
  "separateMajorMinor": true,
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "packageRules": [
    {
      "description": "Disable patch updates for all dependencies",
      "matchUpdateTypes": ["patch"],
      "enabled": false
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["* 11 15-21 * * 3"]
  },
  "timezone": "Europe/Moscow",
  "schedule": ["* 11 15-21 * * 3"]
}
